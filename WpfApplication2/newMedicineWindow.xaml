<Window x:Class="WpfApplication2.newMedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تحديثات العلاج الشهري" Height="1000" Width="1000" Loaded="Window_Loaded_1">
    <Grid>
        <DataGrid x:Name="medicineGrid" Background="Transparent" BorderBrush="LightSeaGreen" BorderThickness="3" HorizontalAlignment="Left" Margin="47,52,0,0" VerticalAlignment="Top" Height="343" Width="912" SelectionChanged="medicineGrid_SelectionChanged"/>
        <Button x:Name="ViewDetailsBtn" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="47,417,0,0" VerticalAlignment="Top" Width="90" Height="36" Click="ViewDetailsBtn_Click">
            <StackPanel Height="36" Width="90" Orientation="Horizontal">
                <Image Width="37" Source="media/icon.png" Margin="0,0,0,10"></Image>
                <TextBlock FontSize="9" Margin="0,10">عرض التفاصيل</TextBlock>
            </StackPanel>
        </Button>

    </Grid>
</Window>
